        <script src="/socket.io/socket.io.js"></script>



        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const socket = io();
                let chat = document.querySelector('.realtimeChat');
                let userBoxes = document.querySelectorAll('.usersBoxes');

                socket.emit('register', { ticketId: localStorage.getItem('selectedTicketId') });

                socket.on('updateChat', function (updatedTicket) {
                    if (updatedTicket._id === localStorage.getItem('selectedTicketId')) {
                        loadMessages(updatedTicket._id, chat);
                    }
                });

                userBoxes.forEach(function (userBox) {
                    userBox.addEventListener('click', function () {
                        userBoxes.forEach(function (box) {
                            box.classList.remove('active');
                        });
                        this.classList.add('active');

                        let ticketId = this.dataset.ticketId;
                        localStorage.setItem('selectedTicketId', ticketId);
                        loadMessages(ticketId, chat);
                    });
                });

                let storedTicketId = localStorage.getItem('selectedTicketId');
                if (storedTicketId) {
                    loadMessages(storedTicketId, chat);
                }
            });

            function createMessageElement(message, chat) {
                let messageDiv = document.createElement('div');
                let userDiv = document.createElement('div');
                let icon = document.createElement('i');
                let chatContainer = document.createElement('div');
                let chatBubble = document.createElement('div');
                let textMessage = document.createElement('p');
                let date = document.createElement('p');

                date.className = 'date m-0 ms-3';
                date.textContent = message.createdAt;

                textMessage.className = 'textMessage m-0 ms-1';
                textMessage.textContent = message.text;

                chatBubble.appendChild(textMessage);
                chatContainer.appendChild(chatBubble);
                userDiv.appendChild(icon);
                messageDiv.appendChild(userDiv);
                messageDiv.appendChild(chatContainer);
                messageDiv.appendChild(date);

                if (message.role === 'user') {
                    messageDiv.className = 'ask d-flex align-items-center justify-content-start mb-5';
                    userDiv.className = 'userAsk d-flex align-items-center';
                    icon.className = 'fas fa-user userIcon2 ms-5';
                    chatBubble.className = 'chatBubble askBubble d-flex';
                } else if (message.role === 'admin') {
                    messageDiv.className = 'response d-flex align-items-center flex-row-reverse mb-5';
                    userDiv.className = 'userResponse d-flex align-items-center';
                    icon.className = 'fas fa-user userIcon3 ms-5';
                    chatBubble.className = 'chatBubble2 askBubble d-flex';
                }

                chat.appendChild(messageDiv);
            }

            function loadMessages(ticketId, chat) {
                let messagesLoaded = {};

                if (messagesLoaded[ticketId]) return;

                let xhr = new XMLHttpRequest();
                xhr.open('GET', `http://localhost:8082/api/tickets/${ticketId}`, true);

                let oldMessages = chat.innerHTML;

                xhr.onload = function () {
                    if (this.status === 200) {
                        let ticket = JSON.parse(this.responseText);
                        chat.innerHTML = '';
                        ticket.messages.forEach(function (message) {
                            createMessageElement(message, chat);
                        });

                        chat.scrollTop = chat.scrollHeight;

                        if (oldMessages !== chat.innerHTML && !messagesLoaded[ticketId]) {
                            messagesLoaded[ticketId] = true;
                        }
                    } else if (this.status === 404) {
                        console.error('Ticket not found');
                    } else {
                        console.error(`An error occurred: ${this.status}`);
                    }
                };

                xhr.onerror = function () {
                    console.error('A network error occurred');
                };

                xhr.send();
            }
        </script>


















