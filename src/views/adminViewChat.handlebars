    <style>
        body {
            scrollbar-width: none;
        }

        body::-webkit-scrollbar {
            width: 0;
        }

        .chatBody {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .verticalUsersBar {
            width: 20%;
            height: auto;
            background-color: #f5f5f5;
            overflow-y: auto;
            flex-grow: 1;
        }

        .usersBoxes {
            width: 100%;
            height: 75px;
            border: 2px solid rgba(0, 0, 0, 0.045);
            padding: 10px 10px;
            font-weight: bold;
            margin-bottom: 1px;
            white-space: nowrap;
        }

        .usersBoxes:hover {
            cursor: pointer;
            border: 2px solid rgba(0, 0, 0, 0.148);
            background-color: #f5f5f58e;
        }

        .usersBoxes.active {
