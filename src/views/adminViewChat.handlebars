        <script>
            document.addEventListener('DOMContentLoaded', function () {
                document.getElementById('logoutButton').addEventListener('click', function () {
                    var xhr = new XMLHttpRequest();
                    xhr.open('POST', '/logout', true);
                    xhr.onload = function () {
                        if (this.status == 200) {
                            window.location.href = '/login';
                        }
                    };
                    xhr.send();
                });
            });

        </script>
        {{!-- logout funct --}}

        <script>document.addEventListener('DOMContentLoaded', function () {
                document.getElementById('sendBtn').addEventListener('click', function () {
                    let messageInput = document.querySelector('.messageSquare');
                    let message = messageInput.value;
                    let userId = '{{userId}}';
                    let ticketId = localStorage.getItem('selectedTicketId');

                    let xhr = new XMLHttpRequest();
                    xhr.open('POST', 'http://localhost:8082/api/tickets/addAdminMsg', true);
                    xhr.setRequestHeader('Content-Type', 'application/json');
                    xhr.onload = function () {
                        if (this.status != 200 && this.status != 201) {
                            console.error('An error occurred: ' + this.status);
                        }
                    };
                    xhr.send(JSON.stringify({
                        adminId: userId,
                        ticketId: ticketId,
                        message: message
                    }));
                    messageInput.value = '';
                });
            });</script>

        <script>
            function logTicketId(ticketId) {
                console.log(ticketId);
            }
        </script>

